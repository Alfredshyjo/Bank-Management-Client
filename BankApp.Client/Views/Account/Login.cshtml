@using BankApp.Client.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - World Bank</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #1a365d;
            --primary-light: #2d4a7c;
            --accent-color: #3182ce;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #1a365d 0%, #2d4a7c 50%, #3182ce 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 1rem 0;
        }

        .login-card {
            background: white;
            border: none;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            max-width: 440px;
            margin: 0 auto;
        }

        .card-header-custom {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: white;
            padding: 1.75rem 1.5rem;
            text-align: center;
        }

        .bank-logo {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.75rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

            .bank-logo i {
                font-size: 1.75rem;
                color: white;
            }

        .card-header-custom h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        .card-header-custom p {
            opacity: 0.9;
            font-size: 0.85rem;
            margin: 0;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
            padding: 0.5rem 0.75rem;
        }

        .form-control {
            border-left: none;
            padding: 0.5rem 0.75rem;
        }

            .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 0.2rem rgba(49, 130, 206, 0.15);
            }

        .input-group:focus-within .input-group-text {
            border-color: var(--accent-color);
        }

        .form-label {
            font-size: 0.9rem;
            margin-bottom: 0.4rem;
        }

        .btn-login {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            border: none;
            padding: 0.65rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(26, 54, 93, 0.4);
            }

        .divider {
            position: relative;
            text-align: center;
            margin: 1rem 0;
        }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background-color: #e2e8f0;
            }

            .divider span {
                background-color: white;
                padding: 0 0.75rem;
                position: relative;
                z-index: 1;
                font-size: 0.75rem;
            }

        .apply-section {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            text-align: center;
        }

            .apply-section p {
                font-size: 0.9rem;
                margin-bottom: 0.4rem;
            }

        .btn-apply {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .btn-apply:hover {
                color: var(--accent-color);
            }

        @@media (max-width: 576px) {
            .login-card

        {
            max-width: 100%;
        }

        .card-header-custom {
            padding: 1.5rem 1.25rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-10">
                <div class="card login-card">
                    <!-- Header -->
                    <div class="card-header-custom">
                        <div class="bank-logo">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3>World Bank</h3>
                        <p>Secure Access to Your Financial Future</p>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-3 px-4">
                        <form asp-action="Login" method="post" id="loginForm">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>

                            <!-- Username -->
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label fw-semibold">
                                    <i class="fas fa-user me-1"></i> Username
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user text-muted"></i>
                                    </span>
                                    <input asp-for="UserName"
                                           class="form-control"
                                           placeholder="Enter your username"
                                           autocomplete="username"
                                           autofocus />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-1"></i> Password
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock text-muted"></i>
                                    </span>
                                    <input asp-for="Password"
                                           type="password"
                                           class="form-control"
                                           id="passwordField"
                                           placeholder="Enter your password"
                                           autocomplete="current-password" />
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg btn-login" id="loginBtn">
                                    <i class="fas fa-sign-in-alt me-2"></i> Sign In
                                </button>
                            </div>

                            <!-- Divider -->
                            <div class="divider">
                                <span class="text-muted text-uppercase fw-semibold">New to World Bank?</span>
                            </div>

                            <!-- Apply Section -->
                            <div class="apply-section">
                                <p class="fw-semibold mb-1">
                                    <i class="fas fa-user-plus me-2"></i>Don't have an account?
                                </p>
                                <a href="@Url.Action("Create", "Application")" class="btn-apply">
                                    Open New Account <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Toastr Configuration
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };

        $(document).ready(function() {
            // Toggle password visibility
            $('#togglePassword').on('click', function() {
                const passwordField = $('#passwordField');
                const icon = $(this).find('i');

                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Form submission with loading state
            $('#loginForm').on('submit', function(e) {
                const btn = $('#loginBtn');
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i> Signing In...');
                btn.prop('disabled', true);
            });
        });

        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                toastr.success('@Html.Raw(TempData["SuccessMessage"])', 'Success');
                </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                toastr.error('@Html.Raw(TempData["ErrorMessage"])', 'Error');
                </text>
        }
    </script>
</body>
</html>
