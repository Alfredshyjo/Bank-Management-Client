@{
    ViewData["Title"] = "Admin Dashboard";
    var totalEmployees = ViewBag.TotalEmployees;
    var totalCustomers = ViewBag.TotalCustomers;
    var pendingApplications = ViewBag.PendingApplications;
}

<div class="container-fluid mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-shield-alt text-primary me-2"></i>Admin Dashboard
                    </h2>
                    <p class="text-muted mb-0">
                        <i class="fas fa-clock me-1"></i>
                        Welcome back, <strong>@User.Identity.Name</strong> |
                        <span id="currentDateTime"></span>
                    </p>
                </div>
                <div>
                    <span class="badge bg-success p-2 px-3">
                        <i class="fas fa-circle-notch fa-spin me-1"></i> System Online
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <!-- Total Employees Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm h-100 dashboard-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted text-uppercase small mb-1 fw-semibold">Total Employees</p>
                            <h2 class="mb-0 fw-bold text-primary">@totalEmployees</h2>
                        </div>
                        <div class="stat-icon bg-primary bg-opacity-10 p-3 rounded">
                            <i class="fas fa-users-cog fa-2x text-primary"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="@Url.Action("Employees")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-users me-1"></i> Manage
                        </a>
                        <small class="text-muted">
                            <i class="fas fa-arrow-up text-success me-1"></i> Active Staff
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Customers Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm h-100 dashboard-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted text-uppercase small mb-1 fw-semibold">Total Customers</p>
                            <h2 class="mb-0 fw-bold text-success">@totalCustomers</h2>
                        </div>
                        <div class="stat-icon bg-success bg-opacity-10 p-3 rounded">
                            <i class="fas fa-users fa-2x text-success"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="@Url.Action("Customers", "Manager")" class="btn btn-sm btn-outline-success">
                            <i class="fas fa-eye me-1"></i> View All
                        </a>
                        <small class="text-muted">
                            <i class="fas fa-user-check text-success me-1"></i> Registered
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Applications Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm h-100 dashboard-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted text-uppercase small mb-1 fw-semibold">Pending Applications</p>
                            <h2 class="mb-0 fw-bold text-warning">@pendingApplications</h2>
                        </div>
                        <div class="stat-icon bg-warning bg-opacity-10 p-3 rounded">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="@Url.Action("PendingApplications", "Manager")" class="btn btn-sm btn-outline-warning">
                            <i class="fas fa-tasks me-1"></i> Review
                        </a>
                        <small class="text-muted">
                            <i class="fas fa-hourglass-half text-warning me-1"></i> Awaiting
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Info Row -->
    <div class="row g-3">
        <!-- Quick Actions Card -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-bolt text-warning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <!-- Action Item 1 -->
                        <div class="col-md-6">
                            <a href="@Url.Action("CreateEmployee")" class="action-card text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-shadow">
                                    <div class="action-icon bg-primary text-white rounded me-3">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-semibold text-dark">Create Employee</h6>
                                        <small class="text-muted">Add new staff member</small>
                                    </div>
                                    <i class="fas fa-chevron-right ms-auto text-muted"></i>
                                </div>
                            </a>
                        </div>

                        <!-- Action Item 2 -->
                        <div class="col-md-6">
                            <a href="@Url.Action("Employees")" class="action-card text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-shadow">
                                    <div class="action-icon bg-info text-white rounded me-3">
                                        <i class="fas fa-list"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-semibold text-dark">All Employees</h6>
                                        <small class="text-muted">View staff directory</small>
                                    </div>
                                    <i class="fas fa-chevron-right ms-auto text-muted"></i>
                                </div>
                            </a>
                        </div>

                        <!-- Action Item 3 -->
                        <div class="col-md-6">
                            <a href="@Url.Action("Applications", "Manager")" class="action-card text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-shadow">
                                    <div class="action-icon bg-success text-white rounded me-3">
                                        <i class="fas fa-folder-open"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-semibold text-dark">All Applications</h6>
                                        <small class="text-muted">Manage applications</small>
                                    </div>
                                    <i class="fas fa-chevron-right ms-auto text-muted"></i>
                                </div>
                            </a>
                        </div>

                        <!-- Action Item 4 -->
                        <div class="col-md-6">
                            <a href="@Url.Action("Transactions", "Manager")" class="action-card text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-shadow">
                                    <div class="action-icon bg-danger text-white rounded me-3">
                                        <i class="fas fa-exchange-alt"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-semibold text-dark">All Transactions</h6>
                                        <small class="text-muted">Monitor activities</small>
                                    </div>
                                    <i class="fas fa-chevron-right ms-auto text-muted"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Info Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100 bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body p-4 text-white text-center d-flex flex-column justify-content-center">
                    <div class="mb-3">
                        <i class="fas fa-user-shield fa-4x mb-3" style="opacity: 0.9;"></i>
                    </div>
                    <h4 class="fw-bold mb-2">System Administrator</h4>
                    <p class="mb-3" style="opacity: 0.9;color:black">
                        You have full access to all system features and data management capabilities.
                    </p>
                    <div class="mt-auto">
                        <div class="d-flex justify-content-center gap-2">
                            <span class="badge bg-white text-primary px-3 py-2">
                                <i class="fas fa-lock me-1"></i> Secure
                            </span>
                            <span class="badge bg-white text-primary px-3 py-2">
                                <i class="fas fa-check-circle me-1"></i> Verified
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <div class="row text-center">
                        <div class="col-md-6">
                            <i class="fas fa-server text-success me-4"></i>
                            <small class="text-muted">Server Status: <strong class="text-success">Online</strong></small>
                        </div>
                        <div class="col-md-6">
                            <i class="fas fa-database text-primary me-4"></i>
                            <small class="text-muted">Database: <strong class="text-primary">Connected</strong></small>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update current date and time
            function updateDateTime() {
                const now = new Date();
                const options = {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                };
                $('#currentDateTime').text(now.toLocaleDateString('en-US', options));
            }

            updateDateTime();
            setInterval(updateDateTime, 60000); // Update every minute
        });
    </script>

    <style>
        /* Dashboard Card Hover Effect */
        .dashboard-card {
            transition: all 0.3s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
            }

        /* Stat Icon */
        .stat-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Action Card Hover */
        .action-card .hover-shadow {
            transition: all 0.3s ease;
        }

        .action-card:hover .hover-shadow {
            background-color: white !important;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transform: translateX(5px);
        }

        /* Action Icon */
        .action-icon {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Gradient Card Text */
        .bg-gradient {
            position: relative;
            overflow: hidden;
        }

            .bg-gradient::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
                background-size: 30px 30px;
                animation: moveBackground 20s linear infinite;
            }

        @@keyframes moveBackground {
            0%

        {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(30px, 30px);
        }

        }
    </style>
}
