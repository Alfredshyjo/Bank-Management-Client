<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - World Bank</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-shield-alt"></i> World Bank
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var roles = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value).ToList();

                        <ul class="navbar-nav me-auto">
                            @if (roles.Contains("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Customer")">
                                        <i class="fas fa-chart-line"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("CreateTransaction", "Customer")">
                                        <i class="fas fa-paper-plane"></i> Transfer
                                    </a>
                                </li>
                                @* <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Transactions", "Customer")">
                                        <i class="fas fa-history"></i> History
                                    </a>
                                </li> *@
                            }

                            @if (roles.Contains("Manager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Manager")">
                                        <i class="fas fa-chart-pie"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-file-invoice"></i> Applications
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Applications", "Manager")">
                                                <i class="fas fa-list"></i> All Applications
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("PendingApplications", "Manager")">
                                                <i class="fas fa-clock"></i> Pending Applications
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-exchange-alt"></i> Transactions
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Transactions", "Manager")">
                                                <i class="fas fa-list"></i> All Transactions
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("PendingTransactions", "Manager")">
                                                <i class="fas fa-hourglass-half"></i> Pending Transactions
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Customers", "Manager")">
                                        <i class="fas fa-users"></i> Customers
                                    </a>
                                </li>
                            }

                            @if (roles.Contains("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                                        <i class="fas fa-tachometer-alt"></i> Admin Panel
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-tie"></i> Employees
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Employees", "Admin")">
                                                <i class="fas fa-users-cog"></i> All Employees
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("CreateEmployee", "Admin")">
                                                <i class="fas fa-user-plus"></i> Add Employee
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-file-alt"></i> Applications
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Applications", "Manager")">
                                                <i class="fas fa-list"></i> All Applications
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("PendingApplications", "Manager")">
                                                <i class="fas fa-clock"></i> Pending Applications
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-exchange-alt"></i> Transactions
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Transactions", "Manager")">
                                                <i class="fas fa-list"></i> All Transactions
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("PendingTransactions", "Manager")">
                                                <i class="fas fa-hourglass-half"></i> Pending Transactions
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Customers", "Manager")">
                                        <i class="fas fa-users"></i> Customers
                                    </a>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @* <li>
                                        <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                            <i class="fas fa-id-card"></i> My Profile
                                        </a>
                                    </li> *@
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")">
                                            <i class="fas fa-key"></i> Change Password
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                            <i class="fas fa-sign-out-alt"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create", "Application")">
                                    <i class="fas fa-user-plus"></i> Open Account
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-4 mb-5 px-4">
        <main role="main" class="pb-5 fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="mb-1">
                        <i class="fas fa-shield-alt"></i> &copy; 2025 World Bank - Your Trusted Banking Partner
                    </p>
                    <p class="mb-0" style="font-size: 0.85rem; opacity: 0.8;">
                        <i class="fas fa-lock"></i> Secure | <i class="fas fa-headset"></i> 24/7 Support | <i class="fas fa-certificate"></i> &copy; Alfred Shyjo
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Toastr Configuration
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Display TempData messages
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                toastr.success('@Html.Raw(TempData["SuccessMessage"])', 'Success');
                </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                toastr.error('@Html.Raw(TempData["ErrorMessage"])', 'Error');
                </text>
        }

        @if (TempData["InfoMessage"] != null)
        {
                <text>
                toastr.info('@Html.Raw(TempData["InfoMessage"])', 'Information');
                </text>
        }

        @if (TempData["WarningMessage"] != null)
        {
                <text>
                toastr.warning('@Html.Raw(TempData["WarningMessage"])', 'Warning');
                </text>
        }
    </script>
</body>
</html>
