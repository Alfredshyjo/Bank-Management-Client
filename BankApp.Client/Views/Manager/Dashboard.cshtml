@{
    ViewData["Title"] = "Manager Dashboard";
    var pendingApplications = ViewBag.PendingApplications;
    var pendingTransactions = ViewBag.PendingTransactions;
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-user-tie text-primary me-2"></i>Manager Dashboard
                    </h2>
                    <p class="text-muted mb-0">
                        <i class="fas fa-clock me-1"></i>
                        Welcome back, <strong>@User.Identity.Name</strong> |
                        <span id="currentDateTime"></span>
                    </p>
                </div>
                <div>
                    <span class="badge bg-success p-2 px-3">
                        <i class="fas fa-check-circle me-1"></i> Active
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards - FIXED CONTENT SPACING -->
    <div class="row g-3 mb-4">
        <!-- Pending Applications -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm dashboard-card">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase mb-1 fw-semibold" style="font-size: 0.7rem; line-height: 1.2;">Pending Applications</p>
                            <h3 class="mb-0 fw-bold text-warning" style="line-height: 1;">@pendingApplications</h3>
                        </div>
                        <div class="stat-icon-compact bg-warning bg-opacity-10 rounded ms-2">
                            <i class="fas fa-file-alt text-warning" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <a href="@Url.Action("PendingApplications")" class="btn btn-outline-warning w-100 btn-sm" style="padding: 0.35rem 0.5rem; font-size: 0.8rem;">
                        <i class="fas fa-eye me-1"></i> Review Applications
                    </a>
                </div>
            </div>
        </div>

        <!-- Pending Transactions -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm dashboard-card">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase mb-1 fw-semibold" style="font-size: 0.7rem; line-height: 1.2;">Pending Transactions</p>
                            <h3 class="mb-0 fw-bold text-info" style="line-height: 1;">@pendingTransactions</h3>
                        </div>
                        <div class="stat-icon-compact bg-info bg-opacity-10 rounded ms-2">
                            <i class="fas fa-exchange-alt text-info" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <a href="@Url.Action("PendingTransactions")" class="btn btn-outline-info w-100 btn-sm" style="padding: 0.35rem 0.5rem; font-size: 0.8rem;">
                        <i class="fas fa-eye me-1"></i> Review Transactions
                    </a>
                </div>
            </div>
        </div>

        <!-- All Applications -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm dashboard-card">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase mb-1 fw-semibold" style="font-size: 0.7rem; line-height: 1.2;">All Applications</p>
                            <h3 class="mb-0 fw-bold text-success" style="line-height: 1;">
                                <i class="fas fa-folder-open"></i>
                            </h3>
                        </div>
                        <div class="stat-icon-compact bg-success bg-opacity-10 rounded ms-2">
                            <i class="fas fa-list text-success" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <a href="@Url.Action("Applications")" class="btn btn-outline-success w-100 btn-sm" style="padding: 0.35rem 0.5rem; font-size: 0.8rem;">
                        <i class="fas fa-list me-1"></i> View All
                    </a>
                </div>
            </div>
        </div>

        <!-- Customers -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm dashboard-card">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase mb-1 fw-semibold" style="font-size: 0.7rem; line-height: 1.2;">Customers</p>
                            <h3 class="mb-0 fw-bold text-primary" style="line-height: 1;">
                                <i class="fas fa-users"></i>
                            </h3>
                        </div>
                        <div class="stat-icon-compact bg-primary bg-opacity-10 rounded ms-2">
                            <i class="fas fa-user-friends text-primary" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <a href="@Url.Action("Customers")" class="btn btn-outline-primary w-100 btn-sm" style="padding: 0.35rem 0.5rem; font-size: 0.8rem;">
                        <i class="fas fa-users me-1"></i> View Customers
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-bolt text-warning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <!-- Action 1 -->
                        <div class="col-md-6 col-lg-3">
                            <a href="@Url.Action("PendingApplications")" class="text-decoration-none">
                                <div class="quick-action-card p-3 bg-light rounded text-center">
                                    <div class="mb-2">
                                        <i class="fas fa-file-alt fa-3x text-warning"></i>
                                    </div>
                                    <h6 class="mb-1 text-dark fw-semibold">Review Applications</h6>
                                    <small class="text-muted">Approve or reject pending applications</small>
                                </div>
                            </a>
                        </div>

                        <!-- Action 2 -->
                        <div class="col-md-6 col-lg-3">
                            <a href="@Url.Action("PendingTransactions")" class="text-decoration-none">
                                <div class="quick-action-card p-3 bg-light rounded text-center">
                                    <div class="mb-2">
                                        <i class="fas fa-exchange-alt fa-3x text-info"></i>
                                    </div>
                                    <h6 class="mb-1 text-dark fw-semibold">Review Transactions</h6>
                                    <small class="text-muted">Process pending transactions</small>
                                </div>
                            </a>
                        </div>

                        <!-- Action 3 -->
                        <div class="col-md-6 col-lg-3">
                            <a href="@Url.Action("Applications")" class="text-decoration-none">
                                <div class="quick-action-card p-3 bg-light rounded text-center">
                                    <div class="mb-2">
                                        <i class="fas fa-folder-open fa-3x text-success"></i>
                                    </div>
                                    <h6 class="mb-1 text-dark fw-semibold">All Applications</h6>
                                    <small class="text-muted">View complete application history</small>
                                </div>
                            </a>
                        </div>

                        <!-- Action 4 -->
                        <div class="col-md-6 col-lg-3">
                            <a href="@Url.Action("Customers")" class="text-decoration-none">
                                <div class="quick-action-card p-3 bg-light rounded text-center">
                                    <div class="mb-2">
                                        <i class="fas fa-users fa-3x text-primary"></i>
                                    </div>
                                    <h6 class="mb-1 text-dark fw-semibold">View Customers</h6>
                                    <small class="text-muted">Manage customer accounts</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update current date and time
            function updateDateTime() {
                const now = new Date();
                const options = {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                };
                $('#currentDateTime').text(now.toLocaleDateString('en-US', options));
            }

            updateDateTime();
            setInterval(updateDateTime, 60000);
        });
    </script>

    <style>
        /* Dashboard Card */
        .dashboard-card {
            transition: all 0.3s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
            }

        /* Compact Stat Icon - SMALLER & TIGHTER */
        .stat-icon-compact {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        /* Quick Action Cards */
        .quick-action-card {
            transition: all 0.3s ease;
            border: 2px solid transparent;
            min-height: 160px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .quick-action-card:hover {
                background-color: white !important;
                border-color: var(--bs-primary);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
                transform: translateY(-5px);
            }
    </style>
}
