@using BankApp.Client.Dto
@model List<TransactionDto>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-receipt text-primary me-2"></i>Transaction History
                </h2>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("CreateTransaction", "Customer")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>New Transaction
                    </a>
                    <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-table text-primary me-2"></i>All Transactions
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle" id="transactionsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Account</th>
                                        <th>Amount</th>
                                        <th>Recipient</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@transaction.TransactionID</td>
                                            <td>@transaction.TransactionDate.ToString("dd MMM yyyy HH:mm")</td>
                                            <td>
                                                @switch (transaction.TransactionType)
                                                {
                                                    case 1:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-arrow-down me-1"></i>Deposit
                                                        </span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-arrow-up me-1"></i>Withdrawal
                                                        </span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-exchange-alt me-1"></i>Transfer
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Other</span>
                                                        break;
                                                }
                                            </td>
                                            <td><span class="badge bg-secondary">@transaction.AccountNumber</span></td>
                                            <td class="fw-bold">₹@transaction.Amount.ToString("N2")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(transaction.RecipientAccountNumber))
                                                {
                                                    <span>@transaction.RecipientAccountNumber</span>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">N/A</small>
                                                }
                                            </td>
                                            <td>
                                                @switch (transaction.Status)
                                                {
                                                    case 1:
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-clock me-1"></i>Pending
                                                        </span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle me-1"></i>Approved
                                                        </span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times-circle me-1"></i>Rejected
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(string.IsNullOrEmpty(transaction.Description) ? "-" : transaction.Description)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info border-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>No transactions found.</strong> Start by creating a new transaction.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                "pageLength": 25,
                "order": [[1, "desc"]]
            });
        });
    </script>

    <style>
        #transactionsTable tbody tr {
            transition: all 0.2s ease;
        }

            #transactionsTable tbody tr:hover {
                background-color: #f8f9fa;
            }
    </style>
}
